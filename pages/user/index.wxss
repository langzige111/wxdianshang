page{
  background-color: #edece8;
  color: #666;
}
.user_image_wrap{
  height: 45vh;
  overflow: hidden;
  position: relative;
  background-color: var(--themeColor);
}
.user_image_wrap .user_bg{
  width: 100%;
  filter: blur(10rpx);
}
.user_image_wrap .user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_image_wrap .user_info .user_icon{
  width: 120rpx;
  border-radius: 60rpx;
}
.user_image_wrap .user_info .user_message{
  color: #fff;
}
.user_btn{
  padding: 40rpx;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%,-50%);
  border: 1rpx solid greenyellow;
  color: greenyellow;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.user_content_wrap{
  position: relative;
}
.user_main{
  position: absolute;
  top: -48rpx;
  left: 0;
  width: 100%;
}
.user_his_row{
  display: flex;
  background-color: #fff;
  margin: 0 40rpx;
  border-radius: 10rpx;
}
.user_his_row .user_his{
  flex: 1;
text-align: center;
padding: 10rpx;
}
.dingdan{
  margin: 20rpx 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.dingdan_title{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  border-bottom: 1px solid #ccc;
}
.dingdan_content{
  display: flex;
}
.dingdan_content_row{
 flex: 1;
 text-align: center;
 padding: 20rpx 0;
}
.address_wrap{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  margin: 0 40rpx;
  padding-left: 20rpx;
  border-radius: 10rpx;
}
.about_wrap{
  margin: 20rpx 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.about_wrap .aaa{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}
.about_wrap .about_kefu{
  display: flex;
  justify-content: space-between;
}
.about_wrap .about_yijian{
  border-top: 1px solid #ccc;
border-bottom: 1px solid #ccc;
}
.recommend_wrap{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx 40rpx 100rpx 40rpx;
}
